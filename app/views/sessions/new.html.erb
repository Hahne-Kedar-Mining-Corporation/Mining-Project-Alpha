<h1>Session New Page</h1>

<div class="login">
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= hidden_field_tag :user_action, "checkout" if @checkout %>    
    <%= f.submit "Login" %>
  <% end %>
</div>


<%= link_to "Create Account", new_user_path %>
